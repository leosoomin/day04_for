package Quiz_7jo;

import java.util.Scanner;

public class Ex03 {

	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);
		int n;
		System.out.println("트리의 줄 수를 입력하시오 : ");
		n = sc.nextInt();
		
		for(int i = 1; i <= n; i++) {
			for(int j = 1; j <= n+1; j++) {
				System.out.print(" ");
			}
			for(int k = 1; k <= 2*i-1; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
			

	}

}
