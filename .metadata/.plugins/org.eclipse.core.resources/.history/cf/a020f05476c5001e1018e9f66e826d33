package if_1jo;

import java.util.Scanner;

public class Ex02 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a ,b;
		String s;
		
		System.out.print("두 수를 입력하시오 : ");
		a = sc.nextInt();
		b = sc.nextInt();
		System.out.println("+, -, *, /, %중 하나를 선택하시오.");
		s = sc.next();
		if(s == "+") {
			System.out.println(a+b);
		}
		if(s == "-") {
			System.out.println(a-b);
		}
		if(s == "*") {
			System.out.println(a*b);
		}
		if(s == "/") {
			System.out.println(a/b);
		}
		if(s == "%") {
			if(a == 0)
				System.out.println("계산할 수 없습니다.");
			else
				System.out.println(a%b);
		}
	}

}
