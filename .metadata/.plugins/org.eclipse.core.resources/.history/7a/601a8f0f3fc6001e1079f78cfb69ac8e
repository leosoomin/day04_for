package Quiz_7jo;

import java.util.Scanner;

public class Ex03 {

	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);
		int a;
		int b = 0;
		char s = '*';
		char t = ' ';
		int n = 0;
		System.out.print("트리의 줄 수를 입력하시오 : ");
		a = sc.nextInt();
		for(int i = 1; i <= a; i++) {
			n = 2 * i - 1;
		//	System.out.print(t + s);
			//System.out.println(s + t);
			System.out.println(s * n);
		}

	}

}
